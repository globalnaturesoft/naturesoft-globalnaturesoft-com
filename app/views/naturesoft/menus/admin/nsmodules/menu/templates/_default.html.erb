<% if parent_menu.present? and (params[:menu_id] == parent_menu.id or parent_menu.children.map(&:id).include?(params[:menu_id])) %>
  <h3><%= parent_menu.name %></h3>
  <ul class="menu-widget">
    <% parent_menu.children.where(status: "active").each do |child_1| %>
      <li class="<%= 'active' if child_1.id == params[:menu_id] %>"><%= link_to child_1.name, "" %></li>
    <% end %>
  </ul>
<% end %>
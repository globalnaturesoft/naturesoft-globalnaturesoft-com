<div class="row">
    <div class="col-md-6">
    <div class="form-group">
        <label class="control-label" ><%= t(:style) %> <span class='text-danger'>*</span></label>
        <div class="">
          <select class="select2" name="options[style]">
            <option <%= "selected" if options["style"] == "default" %> value="default"><%= t(:default) %></option>
            <option <%= "selected" if options["style"] == "top_bar" %> value="top_bar"><%= t(:top_bar) %></option>
            <option <%= "selected" if options["style"] == "container" %> value="container"><%= t(:container) %></option>
            <option <%= "selected" if options["style"] == "footer_top" %> value="footer_top"><%= t(:footer_top) %></option>
          </select>
        </div>
    </div>
  </div>  
</div>